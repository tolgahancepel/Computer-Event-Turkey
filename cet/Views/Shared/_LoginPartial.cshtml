@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="nav nav-pills" >
                @Html.ActionLink("Merhaba " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li>
                <a class="btn btn-rose btn-sm" href="javascript:document.getElementById('logoutForm').submit()">@cet.Resources.lang.CikisYap</a>
            </li>
        </ul>
    }
}
else
{
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
                @Html.ActionLink(cet.Resources.lang.UyeOl, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn btn-default btn-sm" })
            </li>

            <li class="nav-item">
                @Html.ActionLink(cet.Resources.lang.GirisYap, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-info btn-sm" })
            </li> 
        </ul>
}
